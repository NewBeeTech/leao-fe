.content-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 40rpx;
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #353535;
  margin: 30rpx 0 30rpx 0;
}
.content-title-border {
  width: 10rpx;
  height: 34rpx;
  border-radius: 100rpx;
  background-image: linear-gradient(to left, #ffeb4c, #ffd225);
  margin-right: 20rpx;
}
.content-text {
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #353535;
  /* margin: 30rpx 0 60rpx 0; */
}
.content-img {
  width: 100%;
  margin: 30rpx 0;
}
