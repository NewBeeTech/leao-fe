<import src="../../components/newUserAd/newUserAd.wxml"/>
<import src="../../components/hotCourses/hotCourses.wxml"/>
<import src="../../components/coaches/coaches.wxml"/>
<import src="../../components/gyms/gyms.wxml"/>
<view class="container">
  <view class="tabs-container" >
    <view class="tabs">
      <view
        bindtap="bindSelectedTab"
        class="{{selectedTab === 0 ? 'selected-tab' : 'tab' }}"
        data-tab="0"
      >
        首页
      </view>
      <view
        bindtap="bindSelectedTab"
        class="{{selectedTab === 1 ? 'selected-tab' : 'tab' }}"
        data-tab="1"
      >
        课程
      </view>
      <view
        bindtap="bindSelectedTab"
        class="{{selectedTab === 2 ? 'selected-tab' : 'tab' }}"
        data-tab="2"
      >
        我的
      </view>
    </view>
    <view
      class="bar bar-{{selectedTab}}"
    />
  </view>
  <swiper class="swiper"  current="{{selectedTab}}" bindchange="change">
    <swiper-item class="swiper-item">
      <scroll-view scroll-y style="height: 100vh; margin-bottom: 80rpx;">
        <template is="newUserAd" data="{{ description: '了解乐傲运动', src: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/newUserAd.png'}}"/>
        <template is="hotCourses" data="{{ description: '热门课程精选', courses: [{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/hotCourse.jpg', description: '羽毛球初级' },{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/hotCourse.jpg', description: '羽毛球初级' },{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/hotCourse.jpg', description: '羽毛球初级' }]}}" />
        <template is="coaches" data="{{ description: '专业的运动教练', coaches: [{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/coach.jpg', description: '小毛教练' },{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/coach.jpg', description: '小毛教练' },{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/coach.jpg', description: '小毛教练' }]}}" />
        <template is="gyms" data="{{ description: '北京市体育馆', courses: [{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/gym.png', description: '北京市体育馆' },{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/gym.png', description: '北京市体育馆' },{ imgSrc: 'http://newbeestudio.oss-cn-beijing.aliyuncs.com/leao/gym.png', description: '北京市体育馆' }]}}" />
        <view class="bottom-infos">
          <view class="bottom-info" bindtap="call">
            <image src="../../assets/tell.svg" class="bottom-icon"/>
            <view class="bottom-info-title">客服电话</view>
            <view>15088682347</view>
          </view>
          <button class="bottom-info" open-type="contact" >
            <image src="../../assets/mail.svg" class="bottom-icon"/>
            <view class="bottom-info-title">向我们反馈</view>
            <view>请告诉我们您的意见</view>
          </button>
          <view class="bottom-info">
            <image src="../../assets/info.svg" class="bottom-icon"/>
            <view class="bottom-info-title">关于我们</view>
            <view>基本信息与常见问题</view>
          </view>
        </view>
        <view style="height: 80rpx"></view>
      </scroll-view>
    </swiper-item>
    <swiper-item class="swiper-item">
      <scroll-view scroll-y style="height: 100vh; margin-bottom: 80rpx;">
        <view>
          <view>
            <picker mode="date" start="2000-09-01" end="2222-09-01" fields="month" bindchange="bindChangeMonth">
              <view class="picker">
                {{year+'年'+month+'月'}}
              </view>
            </picker>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item class="swiper-item">
      <scroll-view scroll-y style="height: 100vh; margin-bottom: 80rpx;">
        <view class="user-info">
          <image class="user-avatar" src="{{ userInfo.avatarUrl ? userInfo.avatarUrl : ''}}" />
          <view class="user-nickName">
            {{userInfo.nickName}}
            <image src="../../assets/edit.svg" class="edit-icon" />
          </view>
        </view>
        <view class="courses-info">
          <view class="course-info">
            <view class="course-number">0</view>
            <view class="courses-info-desc">可用课时</view>
          </view>
          <view class="course-info">
            <view class="course-number">0</view>
            <view class="courses-info-desc">已预约课程</view>
          </view>
          <view class="course-info">
            <view class="course-number">0</view>
            <view class="courses-info-desc">已完成课程</view>
          </view>
        </view>
        <view class="buy-btn-container">
          <view class="buy-btn">购买课时（限时低至7折）</view>
        </view>
        <view class="my-list">
          <view class="my-list-cell">
            <view class="cell-left-item">
              <image class="cell-icon" src="../../assets/paper.svg" />
              <view>交易记录</view>
            </view>
          </view>
          <view class="my-list-cell">
            <view class="cell-left-item">
              <image class="cell-icon" src="../../assets/share.svg" />
              <view>邀请好友</view>
            </view>
          </view>
          <button class="my-list-cell-btn" open-type="contact">
            <view class="cell-left-item">
              <image class="cell-icon" src="../../assets/mail.svg" />
              <view>意见反馈</view>
            </view>
          </button>
          <view class="my-list-cell-last">
            <view class="cell-left-item">
              <image class="cell-icon" src="../../assets/info.svg" style="color: rgba(33, 33, 33, 0.87);" />
              <view>关于我们</view>
            </view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>
