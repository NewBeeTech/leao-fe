@import "../../libs/animate.wxss"
.container {
  font-family: PingFangSC-Regular, sans-serif;
  overflow-x: hidden;
  width: 100vw;
  display: flex;
  flex-direction: column;
}
.tabs-container {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 100vw;
}

.tabs {
  display: flex;
  background-color: #FFD225;
}

.tab {
  display: flex;
  flex: 1;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  color: rgba(0, 0, 0, 0.5);
}

.selected-tab {
  display: flex;
  flex: 1;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  color: rgb(0, 0, 0);
  font-weight: 550;
}

.bar {
  width: 10%;
  background-color: black;
  height: 4rpx;
  position: absolute;
  bottom: 0px;
  margin-left: 5%;
  border-radius: 4rpx;
  transition: transform 0.5s;
}
.bar-0 {
  transform-origin: 100% 50%;
  transform: translateX(50rpx);
}
.bar-1 {
  transform-origin: 100% 50%;
  transform: translateX(300rpx);
}
.bar-2 {
  transform-origin: 100% 50%;
  transform: translateX(550rpx);
}

@keyframes bar-animation-0 {
  from {
    margin-left: 0%;
  }
  to {
    margin-left: 11.65%;
  }
}
@keyframes bar-animation-1 {
  from {
    margin-left: 0%;
  }
  to {
    margin-left: 45%;
  }
}
@keyframes bar-animation-2 {
  form {
    margin-left: 0%;
  }
  to {
    margin-left: 78.3%;
  }
}

.swiper {
  /*flex: 100;*/
  height:100%;
  /*background-color: grey;*/
}
.swiper-item {
  display: flex;
  flex-direction: column;
}

.tutorial-list {
  height: 100%;
  flex: 1;
}
.tutorial-item {
  font-size: 50rpx;
  color: #23454D;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0rpx 50rpx;
  vertical-align: middle;
  height: 150rpx;
  border-bottom: 1px solid rgba(178,190,193, 0.4);
}
.tutorial-item-title {
  font-size: 42rpx;
  font-weight: bold;
}
