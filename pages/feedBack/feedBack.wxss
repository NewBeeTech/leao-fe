@import "../../components/loading/loading.wxss";
.info-cell {
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 60rpx;
  width: 690rpx;
  padding: 20rpx 0;
}
.exe-count {
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 500;
  text-align: left;
  color: #353535;
  margin-top: 30rpx;
}
.exe-detail {
  width: 288rpx;
  height: 45rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  text-align: left;
  color: #353535;
  margin-top: 30rpx;
}
.info-cell-title {
  height: 45rpx;
  line-height: 45rp;
  font-family: PingFangSC;
  font-size: 32rpx;
  text-align: left;
  color: #212121;
  /* margin-bottom: 20rpx; */
}
.info-cell-input {
  width: 690rpx;
  height: 200rpx;
  line-height: 45rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  text-align: left;
  /* color: #9ca3ae; */
}
.basic-info-container {
  background-color: #fff;
}
.user-info-container {
  background-color: #fff;
  width: 100vw;
  min-height: 100vh;
  overflow-y: scroll;
  overflow-x:hidden;
  padding: 0 30rpx;
}
.optional-info-container {
  background-color: #fff;
  /* margin-top: 16rpx; */
  border-top: 1rpx solid #d8d8d8;
  padding-bottom: 234rpx;
}
.save-bottom-btn {
  width: 100vw;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background-image: linear-gradient(to left, #ffeb4c, #ffd225);
  font-family: PingFangSC;
  font-size: 34rpx;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.info-avator {
  width: 690rpx;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.info-avator-sub-title {
  object-fit: contain;
  font-family: PingFangSC;
  font-size: 32rpx;
  text-align: left;
  color: #bdbdbd;
  height: 80rpx;
  line-height: 80rpx;
}

.add-info-avator {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  background-color: #f5f8fb;
  border: dashed 1rpx #979797;
  font-size: 200rpx;
  line-height: 100rpx;
  text-align: center;
  color: #d8d8d8;
  margin: 15rpx;
}

.add-info-img {
  width: 140rpx;
  height: 140rpx;
  margin: 15rpx;
  position: relative;
}
.add-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
.add-img-clear {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 38rpx;
  height: 38rpx;
}
