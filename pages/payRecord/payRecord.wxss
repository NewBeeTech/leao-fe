@import "../../libs/animate.wxss";
@import "../../components/emptyCourse/emptyCourse.wxss";
.record-container {
  padding: 0 30rpx;
}
.record-cell {
  padding: 30rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #d8d8d8;
}
.record-cell-first {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
}
.record-cell-second {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  margin-top: 20rpx;
}
.record-cell-title {
  height: 45rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #262a2f;
}
.record-cell-date {
  height: 33rpx;
  font-family: PingFangSC;
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: right;
  color: #888888;
}
.record-cell-desc {
  height: 40rpx;
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #888888;
}
.record-cell-icon {
  width: 40rpx;
  height: 40rpx;
}
