@import "../../components/topbar/topbar.wxss";
@import "../courseType/courseType.wxss";
@import "../course/course.wxss";

.gym-container {
  max-width: 100vw;
  overflow-x: hidden;
}
.slide-image {
  width: 100%;
  height: 360rpx !important;
}
swiper {
  height: 360rpx;
}
.coach {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5ebf1;
  padding: 30rpx 0;
}
.courseList-header {
  /* padding: 0 30rpx; */
  margin-top: 60rpx;
  width: 630rpx;
  height: 60rpx;
  background-color: #f5f8fb;
  line-height: 60rpx;
  text-align: center;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: rgba(33, 33, 33, 0.87);
}
.coach-content {
  padding: 0rpx 30rpx;
}
.gym-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
}
.gym-info-right {
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #e5ebf1;
  padding-left: 30rpx;
}
.gym-address-icon {
  width: 60rpx;
  height: 60rpx;
}
.gym-info-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.gym-info-name {
  height: 45rpx;
  line-height: 45rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: rgba(33, 33, 33, 0.87);
}
.gym-info-address {
  max-width: 538rpx;
  height: 40rpx;
  font-family: PingFangSC;
  font-size: 28rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: left;
  color: #888888;
}
