button {
  margin: 0 0;
  padding: 0 0;
  font-size:18px;
  text-align: inherit;
  text-decoration:none;
  line-height: inherit;
  border-radius: none!important;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color: inherit;
  background-color: none;
  border: none!important;
  border-radius: 0;
}
button::after{
  border: none!important;
  border-radius: 0!important;
}
